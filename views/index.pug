block content
	#container.container-fluid
		// Single page-sized row with 3 columns
		.row
			// Empty left column
			#leftCol.col-2
				// Back Button Bar
				#leftInfoBar.row
					form(action="/register" method="GET")
						button.btn.text-nowrap Register
							i.fas.fa-door-open

			// Middle 3 rows
			#middleCol.col-8
				#middleInfoBar.row
					h1.text-nowrap Internet Computing Chat App by Julian and Julius
				#login.row
					form(action='/login' method='POST')
						.form-group
							label Login
							.input-group
								.input-group-prepend
									.input-group-text Username
								input.form-control(type="text", name="username" placeholder="Enter your username")
						.form-group
							.input-group
								.input-group-prepend
									.input-group-text Password
								input.form-control(type="password", name="password" placeholder="Enter your password")
						.form-group
							button.btn=title 
								i.fas.fa-door-open
				#middleInfoBar.row
				
			// Empty right column
			#rightCol.col-2
